#!/bin/bash

APP_NAME=importer
APP_ROOT=/opt/$APP_NAME
JAR_FILE_PATTERN=importer.jar

java \
        -Dnavita.tem.inventory.host=http://inventory:8080 \
        -Dnavita.tem.invoice.host=http://invoice:8080 \
        -Dnavita.tem.message.server=redis \
        -Dnavita.tem.basedir=/var/data/imports \
        -Dnavita.tem.cassandra.contactpoints=cassandra \
        -Dnavita.tem.report.host=http://report:8084 \
        -jar $APP_ROOT/$JAR_FILE_PATTERN   --spring.datasource.url=jdbc:mysql://<%=@rds%>:3306/apprest \
        --spring.datasource.username=<%=@user_database%> \
        --spring.datasource.password=<%=@passwd_database%> \